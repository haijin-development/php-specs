{
    "name": "haijin/specs",
    "description": "A testing framework that uses a simple DSL, inspired by RSpec.",
    "keywords": ["RSpec", "testing", "assertions", "expectations", "specs", "DSL", "PHPUnit"],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/haijin-development/php-specs",
    "authors": [
        {
            "name": "Haijin Development",
            "email": "haijin.development@gmail.com",
            "homepage": "https://github.com/haijin-development",
            "role": "developer"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "clue/commander": "^1.3",
        "questocat/console-color": "^1.0.0"
    },
    "require-dev": {
        "phpunit/php-code-coverage": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Haijin\\Specs\\": ["src/"]
        }
    },
    "bin": ["bin/specs"],
    "scripts": {
        "specs": "php bin/specs"
    }
}