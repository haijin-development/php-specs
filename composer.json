{
    "name": "haijin/specs",
    "description": "A testing framework to replace PHPUnit using a simple DSL inspired by RSpec.",
    "keywords": ["RSpec", "testing", "assertions", "expectations", "specs", "DSL", "PHPUnit"],
    "version": "0.0.1",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/haijin-development/php-specs",
    "authors": [
        {
            "name": "Haijin Development",
            "email": "haijin.development@gmail.com",
            "homepage": "https://github.com/haijin-development",
            "role": "developer"
        }
    ],
    "config": {
        "platform": {
            "php": "7.1"
        }
    },
    "require": {
        "questocat/console-color": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Haijin\\Specs\\": ["src/errors", "src/expectations", "src/runners", "src/specs", "src/failures", "src/report-renderers"]
        }
    },
    "scripts": {
        "specs": "php bin/specs.php"
    }
}